{% extends "layout.twig" %}
{% block body %}
    <div class="container" style="margin-top:8%;">
        <h1>Récapitulatifs des types de skis</h1><br>
        <div class="row">
            <b class="m-2">Nombre de types de skis : {{ typeSkis | length}}</b>
        </div>
        <div>
            <table class="table table-striped table-bordered">
                <caption>Récapitulatifs des typeSki</caption>
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                </tr>
                </thead>
                <tbody>
                {% if typeSkis is not empty%}
                    {% for typeSki in typeSkis  %}
                        <tr>
                            <td>{{typeSki.id}}</td>
                            <td>{{typeSki.libelle}}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr class="table-warning"><td>Aucun type de ski trouvé dans la base de donnée</td></tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}