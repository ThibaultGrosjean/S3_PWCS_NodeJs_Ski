{% extends "layout.twig" %}
{% block body %}
    <div class="container" style="margin-top:8%;">
        <h1>Récapitulatifs des types de skis (Détails)</h1><br>
        <div class="row">
            <b class="m-2">Nombre de types de skis : {{ typeSkis | length}}</b>
        </div>
        <div>
            <table class="table table-striped table-bordered">
                <caption>Détails des types de ski</caption>
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Nombre de ski de ce type</th>
                    <th>Plus petite taille</th>
                    <th>Plus grande taille</th>
                    <th>Prix minimum de Location</th>
                    <th>Prix moyen de Location</th>
                    <th>Prix maximum de Location</th>
                </tr>
                </thead>
                <tbody>
                {% if typeSkis is not empty%}
                    {% for typeSkis in typeSkis  %}
                        <tr>
                            <td>{{typeSkis.id}}</td>
                            <td>{{typeSkis.libelle}}</td>
                            <td>{{typeSkis.nbSki}}</td>
                            <td>{{typeSkis.MinTaille|number_format(0)}} cm</td>
                            <td>{{typeSkis.MaxTaille|number_format(0)}} cm</td>
                            <td>{{typeSkis.PrixMinLocation|number_format(2)}} €</td>
                            <td>{{typeSkis.PrixMoyenLocation|number_format(2)}} €</td>
                            <td>{{typeSkis.PrixMaxLocation|number_format(2)}} €</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr class="table-warning"><td>Pas de Type de Produit</td></tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}