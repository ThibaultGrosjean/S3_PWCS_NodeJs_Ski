<div class="form-group">
    <label>Nom :</label>
    <input name="nom_ski" type="text"  size="18"  value="{{skis.nom_ski|default('')}}" class="form-control {% if erreurs.nom_ski is defined %}is-invalid{% endif %}">
    {% for erreur in erreurs %}
        {% if erreur.param == 'nom_ski' %}
            <br><p class="alert alert-danger"> {{ erreur.msg }}</p>
        {% endif %}
    {% endfor %}
</div>

<div class="form-group">
    <label>Type :</label>
    <select name="type_ski_id" class="form-control {% if erreurs.type_ski_id is defined %}is-invalid{% endif %}">
        {% if  skis.typeSki.id is not defined or skis.typeSki.id is empty   %}
            <option value="">Veuillez s√©lectionner un type de ski</option>
        {% endif %}
        {% for typeSki in typeSkis %}
            <option value="{{ typeSki.id }}"
                {% if skis.typeSki.id is defined and typeSki.id == skis.typeSki.id %}selected{% endif %}
                {% if skis.type_ski_id is defined and typeSki.id == skis.type_ski_id %}selected{% endif %}>
                {{ typeSki.libelle }}
            </option>
        {% endfor %}
    </select>
    {% for erreur in erreurs %}
        {% if erreur.param == 'type_ski_id' %}
            <br><p class="alert alert-danger"> {{ erreur.msg }}</p>
        {% endif %}
    {% endfor %}
</div>

