{% extends "layout.twig" %}
{% block body %}
<div class="container" style="margin-top:8%">
	<h1>Inscription</h1>

	<form method="post" action="/register">
		<div class="form-group">
		    <label>Identifiant</label>
		    <input name="username" type="text" value="{{user.username | default('')}}" size="18" class="form-control">
		    {% for erreur in erreurs %}
	            {% if erreur.param == 'password' %}
	                <br><p class="alert alert-danger"> {{ erreur.msg }}</p>
	            {% endif %}
	        {% endfor %}
		</div>

		<div class="form-group">
		    <label>Mot de passe</label>
		    <input name="password" type="password" value="{{user.password | default('')}}" size="18" class="form-control">
		    {% for erreur in erreurs %}
	            {% if erreur.param == 'password' %}
	                <br><p class="alert alert-danger"> {{ erreur.msg }}</p>
	            {% endif %}
	        {% endfor %}
		</div>

		<button type="submit" class="btn btn-primary">Valider</button>
	</form>
</div>

{% endblock %}